			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var resdata = pm.response.json()\r",
							"pm.environment.set(\"id\",resdata.id)\r",
							"\r",
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"pm.test(\"First Name validation\", function () {\r",
							"    pm.expect(resdata.first_name).to.eql(\"sample string 2\");\r",
							"});\r",
							"pm.test(\"Middle Name validation\", function () {\r",
							"    pm.expect(resdata.middle_name).to.eql(\"sample string 3\");\r",
							"});\r",
							"pm.test(\"Last Name validation\", function () {\r",
							"    pm.expect(resdata.last_name).to.eql(\"sample string 4\");\r",
							"});\r",
							"pm.test(\"Date of Birth\", function () {\r",
							"    pm.expect(resdata.date_of_birth).to.eql(\"sample string 5\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
